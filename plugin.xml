<?xml version='1.0' encoding='utf-8'?>
<plugin id="com" version="1.0.0" 
	xmlns="http://apache.org/cordova/ns/plugins/1.0" 
	xmlns:android="http://schemas.android.com/apk/res/android">
	<name>hudun</name>
	<js-module name="hudun" src="www/hudun.js">
		<clobbers target="cordova.plugins.hudun" />
	</js-module>
	<platform name="android">
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="hudun">
				<param name="android-package" value="com.hudun" />
			</feature>
		</config-file>
		<config-file parent="/*" target="AndroidManifest.xml"></config-file>
		<source-file src="src/android/hudun.java" target-dir="src/com/hudun" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" android:requestLegacyExternalStorage="true" />
        </edit-config>
	</platform>
</plugin>