<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	xmlns:bind="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" 
	xmlns:tools="http://schemas.android.com/tools" android:background="#ffffff">
	<FrameLayout android:id="@+id/view_back" android:layout_width="match_parent" android:layout_height="44dp">
		<ImageButton android:paddingHorizontal="16dp" android:src="@mipmap/hd_close_login" android:background="#00000000" android:id="@+id/img_exit_wechat" android:layout_width="wrap_content" android:layout_height="match_parent" android:visibility="visible" />
	</FrameLayout>
	<ImageView android:src="@mipmap/hd_ic_logo" android:id="@+id/iv_logo" tools:src="@mipmap/hd_ic_logo" android:layout_marginTop="50dp" android:layout_below="@id/view_back" android:layout_centerHorizontal="true" android:layout_width="117dp" android:layout_height="117dp"/>
	<LinearLayout android:id="@+id/view_other" android:gravity="center" android:layout_marginBottom="50dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<ImageView tools:visibility="gone" android:layout_marginRight="60dp" android:id="@+id/btn_wechat_login" android:src="@mipmap/hd_icon_wx" android:layout_width="44dp" android:layout_height="44dp"/>
		<ImageView android:id="@+id/btn_qq_login" android:layout_marginRight="60dp" android:src="@mipmap/hd_icon_qq" android:layout_width="44dp" android:layout_height="44dp"/>
		<ImageView android:id="@+id/btn_phone_login" android:src="@mipmap/hd_icon_phone" android:layout_width="44dp" android:layout_height="44dp"/>
	</LinearLayout>
	<LinearLayout android:layout_marginBottom="20dp" android:layout_above="@+id/view_other" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:gravity="center_vertical">
		<View android:layout_width="60dp" android:layout_height="0.5dp" android:background="#D5DCE8FF" />
		<TextView android:text="其他方式登录" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="10dp" android:paddingRight="10dp" android:textColor="#8B99B3" android:textSize="11sp" />
		<View android:layout_width="60dp" android:layout_height="0.5dp" android:background="#D5DCE8FF" />
	</LinearLayout>
</RelativeLayout>